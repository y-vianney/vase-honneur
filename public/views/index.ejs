<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"></script>

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        gold: '#D4AF37',
                        goldlight: '#F3E5AB',
                        darkgray: '#333333',
                    },
                    fontFamily: {
                        serif: ['Georgia', 'serif'],
                    }
                }
            }
        }
    </script>
    <style>
        body { font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif; }
        .gold-gradient { background: linear-gradient(135deg, #D4AF37 0%, #F3E5AB 100%); }
        .text-shadow { text-shadow: 1px 1px 2px rgba(0,0,0,0.1); }
        /* Styles spécifiques pour le ticket PDF pour assurer la propreté à l'export */
        #ticket-container { background-color: white; }
    </style>
</head>
<body class="bg-gray-50 text-darkgray min-h-screen flex flex-col">

<section id="page-presentation" class="flex-grow flex flex-col items-center justify-center p-6 text-center transition-opacity duration-500">
    <div class="max-w-2xl w-full bg-white p-8 rounded-xl shadow-lg border-t-4 border-gold">
        <div class="mb-6">
            <div class="w-20 h-20 mx-auto bg-gold rounded-full flex items-center justify-center text-white font-serif text-2xl shadow-md mb-4">VH</div>
            <h3 class="uppercase tracking-widest text-sm text-gold font-bold mb-2">Vases d'Honneur</h3>
            <h1 class="text-4xl md:text-5xl font-serif font-bold text-darkgray mb-4">Nuit de la Gloire</h1>
            <p class="text-gray-600 italic">"Une soirée d'adoration et de miracles."</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8 border-y border-gray-100 py-6">
            <div>
                <span class="block text-gold font-bold text-xl">24 NOV</span>
                <span class="text-sm text-gray-500">Cette Année</span>
            </div>
            <div>
                <span class="block text-gold font-bold text-xl">18:00</span>
                <span class="text-sm text-gray-500">Ouverture des portes</span>
            </div>
            <div>
                <span class="block text-gold font-bold text-xl">Palais Culture</span>
                <span class="text-sm text-gray-500">Salle Anoumabo</span>
            </div>
        </div>

        <button onclick="goToPage('registration')" class="gold-gradient text-white font-bold py-3 px-8 rounded-full shadow-md hover:shadow-lg transform hover:-translate-y-1 transition duration-300">
            Réserver ma place
        </button>
    </div>
</section>

<section id="page-registration" class="hidden flex-grow flex flex-col items-center justify-center p-6 transition-opacity duration-500">
    <div class="max-w-md w-full bg-white p-8 rounded-xl shadow-lg border border-goldlight">
        <button onclick="goToPage('presentation')" class="text-gray-400 hover:text-gold mb-4 text-sm underline">Retour</button>
        <h2 class="text-2xl font-serif font-bold text-gold mb-6 text-center">Inscription</h2>

        <form id="registrationForm" onsubmit="processRegistration(event)" class="space-y-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Nom complet</label>
                <input type="text" id="fullname" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gold focus:border-transparent outline-none" placeholder="Ex: Jean Kouassi">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                <input type="email" id="email" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gold focus:border-transparent outline-none" placeholder="jean@exemple.com">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Téléphone</label>
                <input type="tel" id="phone" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gold focus:border-transparent outline-none" placeholder="07 00 00 00 00">
            </div>

            <button type="submit" class="w-full bg-darkgray text-white font-bold py-3 rounded-lg hover:bg-black transition duration-300 mt-4">
                Confirmer et obtenir mon ticket
            </button>
        </form>
    </div>
</section>

<section id="page-ticket" class="hidden flex-grow flex flex-col items-center justify-center p-6 transition-opacity duration-500">
    <div class="text-center mb-6">
        <h2 class="text-2xl font-serif font-bold text-darkgray">Félicitations !</h2>
        <p class="text-gray-600">Votre inscription est confirmée.</p>
    </div>

    <div id="ticket-to-print" class="bg-white w-full max-w-[350px] p-0 shadow-2xl rounded-lg overflow-hidden relative">
        <div class="gold-gradient p-6 text-center text-white relative overflow-hidden">
            <div class="absolute top-0 left-0 w-full h-full opacity-10 bg-[url('https://www.transparenttextures.com/patterns/diamond-upholstery.png')]"></div>
            <h3 class="font-bold tracking-widest text-sm mb-1 uppercase">Vases d'Honneur</h3>
            <h1 class="font-serif text-2xl font-bold mb-1">Nuit de la Gloire</h1>
            <p class="text-sm opacity-90">24 Novembre 2025 • 18h00</p>
        </div>

        <div class="p-6 flex flex-col items-center justify-center border-x border-gray-100">
            <div class="w-full border-b border-dashed border-gray-300 pb-4 mb-4 text-center">
                <p class="text-xs text-gray-400 uppercase">Invité(e)</p>
                <p id="ticket-name" class="text-lg font-bold text-darkgray font-serif truncate w-full">Nom Invité</p>
            </div>

            <div id="qrcode" class="mb-4 p-2 border-2 border-gold rounded-lg"></div>

            <p class="text-xs text-gray-400">ID: <span id="ticket-id">VH-2025-XXXX</span></p>
        </div>

        <div class="bg-gray-800 text-white p-3 text-center text-xs">
            <p>Présentez ce code à l'entrée.</p>
            <p class="text-gold mt-1">Lieu: Palais de la Culture</p>
        </div>
    </div>

    <div class="mt-8 flex flex-col space-y-3 w-full max-w-[350px]">
        <button onclick="downloadPDF()" class="w-full border-2 border-gold text-gold font-bold py-3 rounded-lg hover:bg-gold hover:text-white transition duration-300 flex items-center justify-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" /></svg>
            Télécharger le PDF
        </button>
        <button onclick="location.reload()" class="text-sm text-gray-500 hover:text-gray-800">Nouvelle inscription</button>
    </div>
</section>

<footer class="text-center py-4 text-xs text-gray-400">
    &copy; 2025 Église Vases d'Honneur. Tous droits réservés.
</footer>

<script>
    // Navigation simple entre les "pages"
    function goToPage(pageId) {
        ['page-presentation', 'page-registration', 'page-ticket'].forEach(id => {
            document.getElementById(id).classList.add('hidden');
        });
        document.getElementById('page-' + pageId).classList.remove('hidden');
    }

    // Traitement du formulaire
    // ... dans votre script index.html

    async function processRegistration(e) {
        e.preventDefault();

        const name = document.getElementById('fullname').value;
        const email = document.getElementById('email').value;
        const phone = document.getElementById('phone').value;
        const ticketId = 'VH-' + Math.floor(1000 + Math.random() * 9000);
        const date = new Date().toLocaleString();

        const payload = {
            ticketId: ticketId,
            name: name,
            email: email,
            phone: phone,
            date: date,
            event: "Nuit de la Gloire"
        };

        try {
            // ENVOI VERS MONGODB VIA LE SERVEUR
            const response = await fetch('http://localhost:3000/api/register', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(payload)
            });

            if (response.ok) {
                // Si l'enregistrement en base de données est OK, on génère le ticket
                document.getElementById('ticket-name').innerText = name;
                document.getElementById('ticket-id').innerText = ticketId;

                const qrContainer = document.getElementById("qrcode");
                qrContainer.innerHTML = "";
                new QRCode(qrContainer, {
                    text: JSON.stringify({id: ticketId, name: name}),
                    width: 128, height: 128,
                    colorDark : "#333333", colorLight : "#ffffff",
                    correctLevel : QRCode.CorrectLevel.H
                });

                goToPage('ticket');
            } else {
                alert("Erreur lors de l'enregistrement. Veuillez réessayer.");
            }
        } catch (error) {
            console.error(error);
            alert("Erreur de connexion au serveur.");
        }
    }

    // Fonction d'export PDF propre
    function downloadPDF() {
        const element = document.getElementById('ticket-to-print');
        element.style = "border-radius: 0 !important";

        const opt = {
            margin:       0,
            filename:     'Mon_Ticket_Vases_Honneur.pdf',
            image:        { type: 'jpeg', quality: 0.98 },
            html2canvas:  { scale: 2, useCORS: true },
            jsPDF:        { unit: 'in', format: [3.7, 5.5], orientation: 'portrait' } // Format proche d'un écran mobile
        };

        // Animation bouton
        const btn = event.currentTarget;
        const oldText = btn.innerHTML;
        btn.innerHTML = "Génération...";

        html2pdf().set(opt).from(element).save().then(() => {
            btn.innerHTML = oldText;
        });
    }
</script>
</body>
</html>